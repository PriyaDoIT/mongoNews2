<div class="jumbotron">
    <h1 class="display-5">Mongo Scraper</h1>
    <p class="lead">New York Times Business News Edition</p>
</div>
<div class= "container-fluid">
<div class="row">
    <div class="col-md-12">
        {{#if article}} {{#each article}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <a href={{this.link}} target="_blank" class="article-link">
                    <h4>{{this.title}}</h4>
                </a>
                <button type="button" class="btn btn-success save pull-right" data-id={{this._id}}>Save Article</button>

            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
            </div>
        </div>
        {{/each}} {{else}}
        <div class="panel panel-default">
            <div class="panel-body empty">
                <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>
</div>
